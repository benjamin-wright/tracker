<section id="planner">
  {{> components/planner-nav }}

  <div class="wrapper">
    <!-- Planner headers and columns -->
    <template id="header-tpl">
      <div class="header-col">
        <p></p>
      </div>
    </template>
    <div id="planner-background" class="week"></div>

    <!-- Task plotting overlay -->
    <template id="task-tpl">
      <div class="task">
        <p></p>
        <button>x</button>
      </div>
    </template>
    <div id="planner-tasks" class="overlay"></div>
  </div>
</section>

{{> components/new-task-prompt }}

{{> components/update-task-prompt }}

{{> components/end-task-prompt }}
